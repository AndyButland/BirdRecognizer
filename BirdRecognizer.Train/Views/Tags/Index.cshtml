@model BirdRecognizer.Train.Models.TagsViewModel
@{
    ViewData["Title"] = "Tags";
}

<div class="row">
    <div class="col-md-12">
        <h2>Tags</h2>
        
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="alert alert-success">@Model.Message</p>
        }

        <p>
            @Html.ActionLink("Add New Tag", "Create")
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var tag in Model.Tags)
            {
                <tr>
                    <td>@tag.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = tag.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
